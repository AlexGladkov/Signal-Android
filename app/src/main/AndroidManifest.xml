<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="solonsky.signal.twitter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="com.android.vending.BILLING" />

    <application
        android:name=".helpers.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_app_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app_new"
        android:supportsRtl="true">

        <service android:name=".services.StreamService" />
        <service android:name=".services.MyLocationService" />

        <receiver
            android:name=".services.NotificationReceiver"
            android:enabled="true"
            android:exported="false" />

        <activity android:name=".activities.SplashActivity"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="solonsky.signal.twitter.activities.LoginActivity"
            android:theme="@style/ActivityThemeLight">

        </activity>

        <activity
            android:name="solonsky.signal.twitter.activities.LoggedActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLight"
            android:windowSoftInputMode="adjustResize|stateHidden" />

        <activity
            android:name=".activities.ThanksActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Thanks"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name=".activities.MVPSearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="solonsky.signal.twitter.activities.ComposeActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation"
            android:windowSoftInputMode="adjustResize|stateVisible" />
        <activity
            android:name="solonsky.signal.twitter.activities.ChatActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity
            android:name="solonsky.signal.twitter.activities.ChatSelectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation"
            android:windowSoftInputMode="adjustPan|stateVisible" />
        <activity
            android:name="solonsky.signal.twitter.activities.SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.AboutActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.AdvancedActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.AppearanceActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.GesturesActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.UsersListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.SupportActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.TimelineActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.UsersNotificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.TweetActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.ProfileSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.DetailActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TranslucentLight" />
        <activity
            android:name="solonsky.signal.twitter.activities.MuteAddActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation"
            android:windowSoftInputMode="adjustResize" />
