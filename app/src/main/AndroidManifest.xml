        <activity
            android:name="solonsky.signal.twitter.activities.StatsTweetsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.MediaActivity"
            android:configChanges="orientation|screenSize"
            android:theme="@style/ActivityThemeLightNoAnimation" />


        <service
            android:name="solonsky.signal.twitter.services.NListenerExample"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_NOTIFICATION_LISTENER_SERVICE">
            <intent-filter>
                <action android:name="android.service.notification.NotificationListenerService" />
            </intent-filter>
        </service>
    </application>

</manifest>