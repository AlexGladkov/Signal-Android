            android:name="solonsky.signal.twitter.activities.MuteClientsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ActivityThemeLightNoAnimation" />
        <activity
            android:name="solonsky.signal.twitter.activities.ContentActivity"
            android:theme="@style/ActivityThemeLightNoAnimation" />
