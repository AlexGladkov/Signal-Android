<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="model" type="solonsky.signal.twitter.models.NotificationModel" />
        <variable name="click" type="solonsky.signal.twitter.models.NotificationModel.NotificationClickHandler" />
        <import type="android.view.View" alias="v" />
        <import type="solonsky.signal.twitter.R" />
        <import type="solonsky.signal.twitter.helpers.AppData" alias="appData" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="72dp"
        app:backgroundAttr="@{model.isHighlighted ? R.attr.backgroundHighlightColor : R.attr.backgroundPrimaryColor}"
        android:onClick="@{click::onItemClick}" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:layout_width="@dimen/notification_box_icon_size"
                android:layout_height="@dimen/notification_icon_size"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/notification_civ_avatar"
                    android:layout_width="@dimen/notification_icon_size"
                    android:layout_height="@dimen/notification_icon_size"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:background="?attr/backgroundRoundImage"
                    app:imageUrl="@{model.iconUrl}" />

                <ImageView
                    android:id="@+id/notification_img_badge"
                    android:layout_width="@dimen/notification_sub_icon_size"
                    android:layout_height="@dimen/notification_sub_icon_size"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:background="@{model.highlighted ? @drawable/badge_round_highlight : @drawable/badge_round_white}"
                    app:drawableResource="@{model.drawableResource}"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="19dp"
                android:layout_marginBottom="15.75dp"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="6dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="?attr/primaryTextColor"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:text="@{model.username}" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="?attr/secondaryTextColor"
                        android:layout_marginTop="0.75dp"
                        android:textSize="12dp"
                        android:includeFontPadding="false"
                        android:fontFamily="sans-serif"
                        app:parseTime="@{model.dateTime}" />

                </LinearLayout>

                <TextView
                    android:id="@+id/notification_txt_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:includeFontPadding="false"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="1.5dp"
                    app:text="@{model.subline}" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10.5dp"
                    android:fontFamily="sans-serif"
                    android:textSize="14dp"
                    android:lineSpacingMultiplier="1.071"
                    android:textColor="?attr/thirdTextColor"
                    android:text="@{model.text}"
                    android:visibility="@{model.text.empty ? v.GONE : v.VISIBLE}" />
                
                <LinearLayout
                    android:id="@+id/notification_main_quote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:backgroundAttrAnimation="@{model.highlighted ? R.attr.backgroundHighlightColor : R.attr.backgroundPrimaryColor}"
                    app:durationRange="@{150}" >

                    <View
                        android:id="@+id/view_notification_main_quote_mark"
                        android:layout_width="8dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="?attr/quoteDividerResource" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_notification_main_quote_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12dp"
                            android:textStyle="bold"
                            android:textColor="?attr/secondaryTextColor"
                            android:includeFontPadding="false"
                            android:fontFamily="sans-serif" />

                        <TextView
                            android:id="@+id/txt_notification_main_quote_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLength="144"
                            android:layout_marginTop="3dp"
                            android:lineSpacingMultiplier="1.075"
                            android:textSize="14dp"
                            android:textStyle="normal"
                            android:textColor="?attr/thirdTextColor"
                            android:fontFamily="sans-serif" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/notification_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_gravity="bottom"
            android:layout_marginStart="@{model.divideState == appData.DIVIDER_SHORT ? @dimen/divider_margin_short : @dimen/divider_margin_long}"
            android:background="?attr/dividerColor"
            android:visibility="@{model.divideState == appData.DIVIDER_NONE ? v.GONE : v.VISIBLE}" />

    </FrameLayout>
</layout>