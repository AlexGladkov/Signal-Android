<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:theme="@style/ActivityTheme.Primary.Base.Dark"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_client_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="#hashtag"
        android:textColor="@color/dark_hint_text_color"
        android:background="@color/dark_background_secondary_color" />

    <TextView
        android:id="@+id/dialog_client_mute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="@string/dialog_mute"
        android:textColor="@color/dark_primary_text_color"
        android:background="@color/dark_background_color" />

</LinearLayout>