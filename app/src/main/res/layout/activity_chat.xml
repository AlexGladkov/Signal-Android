<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="solonsky.signal.twitter.viewmodels.ChatViewModel" />

        <variable
            name="click"
            type="solonsky.signal.twitter.viewmodels.ChatViewModel.ChatClickHandler" />

        <variable
            name="appData"
            type="solonsky.signal.twitter.helpers.AppData" />

        <import
            alias="v"
            type="android.view.View" />

        <import type="solonsky.signal.twitter.R" />
    </data>

    <RelativeLayout
        android:id="@+id/chat_rl_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/backgroundPrimaryColor"
        android:fitsSystemWindows="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_chat"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:contentInsetStart="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/btn_chat_back"
                    android:layout_width="@dimen/tb_icon_size"
                    android:layout_height="@dimen/tb_icon_size"
                    android:background="?attr/buttonRipple"
                    android:onClick="@{click::onBackClick}"
                    android:padding="16dp"
                    android:src="@drawable/ic_icons_toolbar_back"
                    android:tint="?attr/buttonTintColor" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:includeFontPadding="false"
                    android:text="@{model.title}"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="@dimen/tb_icon_size"
                    android:layout_height="@dimen/tb_icon_size"
                    android:background="?attr/buttonRipple"
                    android:onClick="@{click::onDestroyClick}"
                    android:padding="16dp"
                    android:src="@drawable/ic_icons_more_hor"
                    android:tint="?attr/buttonTintColor" />

            </LinearLayout>
        </android.support.v7.widget.Toolbar>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_chat_bottom"
            android:layout_below="@+id/tb_chat">

            <com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout
                android:id="@+id/chat_srl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srl_direction="bottom">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <solonsky.signal.twitter.libs.ChatRecyclerView
                        android:id="@+id/recycler_chat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="-50dp"
                        android:clipToPadding="false"
                        android:overScrollMode="never"
                        android:paddingBottom="16dp"
                        android:visibility="@{model.state == appData.UI_STATE_VISIBLE ? v.VISIBLE : v.GONE}"
                        app:listConfig="@{model.listConfig}" />

                </FrameLayout>
            </com.orangegangsters.github.swipyrefreshlayout.library.SwipyRefreshLayout>

            <com.wang.avi.AVLoadingIndicatorView
                android:layout_width="@dimen/big_loader_size"
                android:layout_height="@dimen/big_loader_size"
                android:layout_gravity="center"
                android:alpha="0.5"
                android:visibility="@{model.state == appData.UI_STATE_LOADING ? v.VISIBLE : v.GONE}"
                app:indicatorColor="@color/loaderColor"
                app:indicatorName="BallScaleMultipleIndicator" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:includeFontPadding="false"
                android:text="@string/chat_no_text"
                android:textColor="?attr/hintTextColor"
                android:textStyle="normal"
                android:visibility="@{model.state == appData.UI_STATE_NO_ITEMS ? v.VISIBLE : v.GONE}" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/ll_chat_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?attr/backgroundSecondaryColor"
            android:minHeight="48dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/txt_chat_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="13.5dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="13dp"
                    android:layout_weight="1"
                    android:background="?attr/backgroundSecondaryColor"
                    android:fontFamily="sans-serif"
                    android:hint="@string/message_send_hint"
                    android:includeFontPadding="false"
                    android:lineSpacingMultiplier="1.042"
                    android:onTextChanged="@{model::onTextChanged}"
                    android:textColor="?attr/primaryTextColor"
                    android:textSize="16dp"
                    android:textStyle="normal" />

                <ImageView
                    android:id="@+id/btn_chat_send"
                    android:layout_width="@dimen/message_button_send"
                    android:layout_height="@dimen/message_button_send"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="24dp"
                    android:layout_marginStart="24dp"
                    android:alpha="@{model.enabled ? 1.0f : 0.2f}"
                    android:onClick="@{click::onSendClick}"
                    android:src="@drawable/ic_icons_toolbar_send"
                    android:tint="?attr/buttonSendTintColor" />

            </LinearLayout>

            <View
                android:id="@+id/chat_send_divider"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_max_height"
                android:background="@color/white" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dropShadowHeight"
            android:layout_below="@+id/tb_chat"
            android:background="?attr/dropShadowResource" />

    </RelativeLayout>
</layout>