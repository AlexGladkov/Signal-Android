<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:minWidth="144dp"
    android:layout_width="wrap_content"
    android:layout_height="48dp">
    
    <com.wang.avi.AVLoadingIndicatorView
        android:id="@+id/user_search_cpv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical"
        android:visibility="gone"
        android:alpha="0.5"
        app:indicatorName="BallScaleMultipleIndicator"
        app:indicatorColor="?attr/hintTextColor" />

    <ImageView
        android:id="@+id/user_search_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:padding="8dp"
        android:background="?attr/searchIconResource"
        android:src="@drawable/ic_icons_compose_search"
        android:layout_marginStart="12dp"
        android:layout_gravity="center_vertical"
        app:tint="?attr/hintTextColor" />

    <TextView
        android:id="@+id/user_search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="sans-serif"
        android:textSize="14dp"
        android:textColor="?attr/hintTextColor"
        android:layout_gravity="center_vertical" />

</LinearLayout>