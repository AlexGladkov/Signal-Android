<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="model" type="solonsky.signal.twitter.models.RemoveModel" />
        <variable name="click" type="solonsky.signal.twitter.models.RemoveModel.RemoveClickHandler" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:theme="@style/ActivityTheme.Primary.Base.Dark"
        android:background="?attr/backgroundPrimaryColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="@{click::onItemClick}"
            android:paddingStart="16dp"
            android:paddingTop="14dp"
            android:paddingBottom="14dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@{model.title}"
                android:textSize="16dp"
                android:textStyle="normal"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:textColor="?attr/primaryTextColor"
                android:layout_gravity="center_vertical" />
            
            <ImageView
                android:layout_width="@dimen/cell_remove_icon_size"
                android:layout_height="@dimen/cell_remove_icon_size"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_icons_minus"
                android:onClick="@{click::onMinusClick}"
                android:padding="16dp" />

        </LinearLayout>

        <!--<View-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/divider_height"-->
            <!--android:background="?attr/dividerColor"/>-->

    </LinearLayout>
</layout>