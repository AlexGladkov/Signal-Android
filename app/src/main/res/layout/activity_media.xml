<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_media_main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/ActivityTheme.Primary.Base.Dark"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black"
    android:orientation="vertical">

    <VideoView
        android:id="@+id/vv_gif"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_media"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/content_toolbar_shape"
        android:contentInsetEnd="0dp"
        android:contentInsetLeft="0dp"
        android:contentInsetRight="0dp"
        android:contentInsetStart="0dp"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/btn_media_back"
                    android:layout_width="@dimen/tb_icon_size"
                    android:layout_height="@dimen/tb_icon_size"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/white_ripple_background"
                    android:padding="16dp"
                    android:src="@drawable/ic_icons_toolbar_back"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/txt_content_counter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
                    android:layout_marginStart="24dp"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/btn_media_share"
                    android:layout_width="@dimen/tb_icon_size"
                    android:layout_height="@dimen/tb_icon_size"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/white_ripple_background"
                    android:padding="16dp"
                    android:src="@drawable/ic_icons_actions_share"
                    app:tint="@color/white" />

                <ImageView
                    android:id="@+id/btn_media_chrome"
                    android:layout_width="@dimen/tb_icon_size"
                    android:layout_height="@dimen/tb_icon_size"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/white_ripple_background"
                    android:padding="16dp"
                    android:src="@drawable/ic_icons_toolbar_chrome"
                    app:tint="@color/white" />

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <ImageView
                    android:id="@+id/btn_media_save"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    android:background="@drawable/white_ripple_background"
                    android:foregroundGravity="center"
                    android:padding="16dp"
                    android:src="@drawable/ic_icons_toolbar_save"
                    app:tint="@color/white" />

            </FrameLayout>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <FrameLayout
        android:id="@+id/ll_media_container"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:background="@drawable/content_bottom_shape"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/btn_media_rewind"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_control_rew"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_media_play"
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="9dp"
            android:padding="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_control_play"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_media_pause"
            android:layout_width="60dp"
            android:layout_height="62dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="9dp"
            android:padding="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_control_pause"
            android:visibility="gone"
            app:tint="@color/white" />

        <ImageView
            android:id="@+id/btn_media_forward"
            android:layout_width="59dp"
            android:layout_height="48dp"
            android:layout_gravity="end"
            android:layout_marginEnd="48dp"
            android:layout_marginTop="16dp"
            android:padding="16dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_control_rewind"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txt_media_start"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="16dp"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <SeekBar
            android:id="@+id/sb_media"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="64dp"
            android:layout_marginStart="64dp"
            android:maxHeight="4dp"
            android:progressDrawable="@drawable/seek_bar_progress"
            android:thumb="@drawable/seek_bar_thumb" />

        <TextView
            android:id="@+id/txt_media_end"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="sans-serif"
            android:gravity="start"
            android:includeFontPadding="false"
            android:textColor="@color/white"
            android:textSize="12dp" />

    </FrameLayout>

</RelativeLayout>