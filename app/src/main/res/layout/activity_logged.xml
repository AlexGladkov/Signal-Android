<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <variable name="logged" type="solonsky.signal.twitter.viewmodels.LoggedViewModel" />
        <variable name="click" type="solonsky.signal.twitter.viewmodels.LoggedViewModel.LoggedClickHandler" />
        <variable name="appData" type="solonsky.signal.twitter.helpers.AppData" />
        <import type="solonsky.signal.twitter.helpers.Flags.STATUS_TYPE" />
        <import type="android.view.View" alias="v" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/rl_logged_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusableInTouchMode="true"
        tools:context="solonsky.signal.twitter.activities.LoggedActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <com.twitter.sdk.android.core.identity.TwitterLoginButton
                android:id="@+id/btn_logged_twitter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"/>

            <android.support.design.widget.CoordinatorLayout
                android:id="@+id/cl_logged_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_above="@+id/ag_logged_bottom" >

                <FrameLayout
                    android:id="@+id/fl_logged_main"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/backgroundSecondaryColor"/>

                <FrameLayout
                    android:id="@+id/fl_logged_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:background="?attr/backgroundSecondaryColor" />

            </android.support.design.widget.CoordinatorLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_logged"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_toolbar_margin_top"
                android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOGGED_MAIN || logged.toolbarState == appData.TOOLBAR_LOGGED_DM ? v.VISIBLE : logged.toolbarState == appData.TOOLBAR_LOGGED_PROFILE ? v.GONE : v.GONE}"
                android:contentInsetStart="0dp"
                app:contentInsetStart="0dp"
                android:background="?attr/backgroundPrimaryColor" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        app:imageUrl="@{logged.avatar}"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/buttonRipple"
                        android:onClick="@{click::onUserClick}" />
                    
                    <TextView
                        android:id="@+id/txt_logged_feed_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:text="@{logged.title}"
                        android:textColor="?attr/primaryTextColor"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:onClick="@{click::onUpdateClick}"
                        android:visibility="@{logged.statusType == STATUS_TYPE.TITLE ? v.VISIBLE : v.GONE}"/>
                    
                    <ImageView
                        android:id="@+id/img_logged_feed_arrow"
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="12dp"
                        android:layout_marginStart="-4dp"
                        android:src="?attr/scrollDownResource"
                        android:onClick="@{click::onUpdateClick}"
                        android:visibility="@{logged.statusType == STATUS_TYPE.ARROW ? v.VISIBLE : v.GONE}" />

                    <TextView
                        android:id="@+id/txt_logged_feed_count"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="8dp"
                        android:textColor="?attr/counterTextColor"
                        android:textSize="14dp"
                        android:fontFamily="sans-serif-medium"
                        android:includeFontPadding="false"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:visibility="@{logged.statusType == STATUS_TYPE.COUNTER ? v.VISIBLE : v.GONE}"
                        android:background="@drawable/shape_light_gray_16dp"
                        android:onClick="@{click::onUpdateClick}"
                        android:text="@{String.valueOf(logged.feedCount)}" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:layout_gravity="center_vertical"
                        android:padding="16dp"
                        android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOGGED_DM ? v.GONE : v.VISIBLE}"
                        android:onClick="@{click::onComposeClick}"
                        android:background="?attr/buttonRipple"
                        android:tint="?attr/buttonTintColor"
                        android:src="@drawable/ic_icons_toolbar_new_tweet" />

                    <ImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:layout_gravity="center_vertical"
                        android:padding="16dp"
                        android:tint="?attr/buttonTintColor"
                        android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOGGED_DM ? v.VISIBLE : v.GONE}"
                        android:onClick="@{click::onDMClick}"
                        android:background="?attr/buttonRipple"
                        android:src="@drawable/ic_icons_toolbar_new_dm" />

                </LinearLayout>
            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_logged_mute"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_toolbar_margin_top"
                android:background="?attr/backgroundPrimaryColor"
                android:contentInsetStart="0dp"
                app:contentInsetStart="0dp"
                android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOOGED_MUTE ? v.VISIBLE : v.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/buttonRipple"
                        android:layout_gravity="center_vertical"
                        app:imageUrl="@{logged.avatar}" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:textSize="16dp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:text="@string/logged_mute"/>

                    <ImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="16dp"
                        android:src="?attr/accountAddImage"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/buttonRipple"
                        android:onClick="@{click::onMuteAddClick}" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_search"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_toolbar_margin_top"
                android:background="?attr/backgroundPrimaryColor"
                android:contentInsetStart="0dp"
                app:contentInsetStart="0dp"
                android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOGGED_SEARCH || logged.toolbarState == appData.TOOLBAR_LOGGED_SEARCHED ? v.VISIBLE : v.GONE}">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="12dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/buttonRipple"
                        android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOGGED_SEARCH ? v.VISIBLE : v.GONE}"
                        app:imageUrl="@{logged.avatar}"
                        android:layout_gravity="center_vertical" />

                    <ImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:background="?attr/buttonRipple"
                        android:tint="?attr/buttonTintColor"
                        android:onClick="@{click::onBackSearchClick}"
                        android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOGGED_SEARCHED ? v.VISIBLE : v.GONE}"
                        android:src="@drawable/ic_icons_toolbar_back"
                        android:layout_gravity="center_vertical" />

                    <EditText
                        android:id="@+id/txt_logged_search"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:textSize="16dp"
                        android:includeFontPadding="false"
                        android:selectAllOnFocus="true"
                        android:fontFamily="sans-serif"
                        android:textColor="?attr/primaryTextColor"
                        android:singleLine="true"
                        android:textColorHighlight="?attr/selectionTextColor"
                        android:imeOptions="actionDone"
                        android:textCursorDrawable="?attr/cursorColor"
                        android:background="@android:color/transparent"
                        android:layout_gravity="center_vertical"
                        android:textColorHint="?attr/hintTextColor"
                        android:hint="@string/search_hint"
                        android:layout_weight="1"/>

                    <ImageView
                        android:id="@+id/btn_logged_more"
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="16dp"
                        android:src="@drawable/ic_icons_more_hor"
                        android:layout_gravity="center_vertical"
                        android:background="?attr/buttonRipple"
                        android:tint="?attr/buttonTintColor" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <android.support.v7.widget.Toolbar
                android:id="@+id/tb_logged_choose"
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_toolbar_margin_top"
                android:visibility="gone"
                android:background="?attr/backgroundPrimaryColor"
                android:contentInsetStart="0dp"
                app:contentInsetStart="0dp">

                <!--app:isVisible="@{logged.toolbarState == appData.TOOLBAR_LOOGED_CHOOSE}"-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="24dp" >

                    <ImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="16dp"
                        android:layout_marginStart="8dp"
                        android:src="?attr/accountAddImage"
                        android:onClick="@{click::onAddClick}"
                        android:background="?attr/buttonRipple"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="16dp"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:textColor="?attr/primaryTextColor"
                        android:text="@string/logged_choose_accounts"/>

                    <ImageView
                        android:layout_width="@dimen/tb_icon_size"
                        android:layout_height="@dimen/tb_icon_size"
                        android:padding="16dp"
                        android:src="@drawable/ic_icons_toolbar_gear"
                        android:layout_gravity="center_vertical"
                        android:tint="?attr/buttonTintColor"
                        android:background="?attr/buttonRipple"
                        android:onClick="@{click::onSettingsClick}" />

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

            <solonsky.signal.twitter.libs.bottomBar.AGBottomBar
                android:id="@+id/ag_logged_bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/bottom_bar_height"
                android:background="?attr/backgroundPrimaryColor"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom" />

            <View
                android:id="@+id/view_logged_bottom_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_max_height"
                android:background="?attr/barShadowColor"
                android:layout_alignParentBottom="true" />

            <FrameLayout
                android:id="@+id/view_logged_scrim"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/scrim_color"
                android:layout_below="@+id/tb_logged_choose"
                android:visibility="gone"
                android:onClick="@{click::onCancelClick}" >

                <com.github.rahatarmanahmed.cpv.CircularProgressView
                    android:layout_width="@dimen/loader_size"
                    android:layout_height="@dimen/loader_size"
                    android:visibility="@{logged.adding ? v.VISIBLE : v.GONE}"
                    android:layout_gravity="center"
                    app:cpv_indeterminate="true"
                    app:cpv_color="?attr/hintTextColor"
                    app:cpv_animAutostart="true" />

                <TextView
                    android:id="@+id/txt_logged_switch_limit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/dark_primary_text_color"
                    android:textSize="12dp"
                    android:textStyle="normal"
                    android:layout_margin="16dp"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal|bottom"
                    android:text="@string/error_switch_limit" />

            </FrameLayout>

            <!--app:isVisible="@{logged.toolbarState == appData.TOOLBAR_LOOGED_CHOOSE}"-->

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_logged_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tb_logged_choose"
                android:overScrollMode="never"
                android:visibility="gone"
                app:listConfig="@{logged.userConfig}" />

            <!--app:isVisible="@{logged.toolbarState == appData.TOOLBAR_LOOGED_CHOOSE}"-->

            <View
                android:id="@+id/view_logged_drop_shadow"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dropShadowHeight"
                android:background="?attr/dropShadowResource"
                android:visibility="@{logged.toolbarState == appData.TOOLBAR_LOGGED_PROFILE ? v.GONE : v.VISIBLE}"
                android:layout_marginTop="@dimen/default_toolbar_margin_top" />


        </RelativeLayout>
    </android.support.design.widget.CoordinatorLayout>

</layout>

