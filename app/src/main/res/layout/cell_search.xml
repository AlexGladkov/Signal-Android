<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="model" type="solonsky.signal.twitter.models.SearchModel" />
        <variable name="click" type="solonsky.signal.twitter.models.SearchModel.SearchClickHandler" />
        <import type="android.view.View" alias="v" />
        <import type="solonsky.signal.twitter.R" />
    </data>

    <FrameLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:onClick="@{click::onItemClick}"
        app:backgroundAttr="@{model.isHighlighted ? R.attr.backgroundHighlightColor : R.attr.backgroundPrimaryColor}" >
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="?attr/primaryTextColor"
                android:textSize="16dp"
                android:fontFamily="sans-serif"
                android:includeFontPadding="false"
                android:layout_weight="1"
                android:text="@{model.title}"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="16dp" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="?attr/highlightTextColor"
                android:layout_marginEnd="24dp"
                android:layout_marginTop="15dp"
                android:textSize="16dp"
                android:includeFontPadding="false"
                android:fontFamily="sans-serif-medium"
                android:text="@{String.valueOf(model.count)}"
                android:visibility="@{model.count == 0 ? v.GONE : v.VISIBLE}"/>
            
            <ImageView
                android:layout_width="@dimen/search_icon_size"
                android:layout_height="@dimen/search_icon_size"
                android:scaleType="fitXY"
                android:padding="12dp"
                android:layout_marginEnd="4dp"
                android:onClick="@{click::onCloseClick}"
                android:src="@drawable/ic_icons_close_small"
                android:visibility="@{model.count == 0 ? v.VISIBLE : v.GONE}"
                app:tint="?attr/hintTextColor" />

        </LinearLayout>

        <View
            android:id="@+id/search_view_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginStart="16dp"
            android:layout_gravity="bottom"
            android:background="?attr/dividerColor" />

    </FrameLayout>
</layout>