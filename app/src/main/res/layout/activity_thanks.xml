<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/thanks_color"
    android:id="@+id/rl_thanks_main">

    <ImageView
        android:id="@+id/img_thanks_badge"
        android:layout_width="120dp"
        android:layout_height="127dp"
        android:src="@drawable/ic_icons_badge"
        android:scaleType="fitXY"
        android:layout_centerInParent="true" />
    
    <TextView
        android:id="@+id/txt_thanks_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_thanks_badge"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="38dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-light"
        android:text="Thank You!"/>

    <TextView
        android:id="@+id/txt_thanks_lower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_below="@+id/img_thanks_badge"
        android:layout_centerHorizontal="true"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:fontFamily="sans-serif"
        android:textSize="16dp"
        android:text="Your perks unlocked.\nCheck them out."/>


</RelativeLayout>