<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="model" type="solonsky.signal.twitter.viewmodels.AdvancedViewModel" />
        <variable name="click" type="solonsky.signal.twitter.viewmodels.AdvancedViewModel.AdvancedClickHandler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:theme="@style/ActivityTheme.Primary.Base.Dark"
        android:background="?attr/backgroundSecondaryColor">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tb_advanced"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="@dimen/status_bar_height"
            app:contentInsetStart="0dp"
            android:background="?attr/backgroundPrimaryColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/tb_icon_size"
                    android:layout_height="@dimen/tb_icon_size"
                    android:src="@drawable/ic_icons_toolbar_back"
                    android:padding="16dp"
                    android:background="?attr/buttonRipple"
                    android:onClick="@{click::onBackClick}"
                    app:tint="?attr/buttonTintColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/settings_advanced"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"
                    android:textColor="?attr/primaryTextColor" />

            </LinearLayout>

        </androidx.appcompat.widget.Toolbar>
        
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_below="@+id/tb_advanced"
            android:background="?attr/backgroundSecondaryColor">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="24dp"
                    android:clipToPadding="false"
                    app:listConfig="@{model.listConfig}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="?attr/dividerColor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/settings_divider_top"
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:background="?attr/dividerColor" />

                    <FrameLayout
                        android:id="@+id/flLanguage"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_text_size"
                        android:layout_marginTop="24dp"
                        android:background="?attr/backgroundPrimaryColor" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            android:background="?attr/backgroundPrimaryColor" >

                            <TextView
                                android:id="@+id/txtAdvancedLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16dp"
                                android:text="@string/settings_advanced_language"
                                android:layout_marginStart="16dp"
                                android:fontFamily="sans-serif"
                                android:includeFontPadding="false"
                                android:textColor="?attr/primaryTextColor" />

                            <TextView
                                android:id="@+id/txtAdvancedCurrentLanguage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:textSize="14dp"
                                android:text="English"
                                android:layout_marginTop="4dp"
                                android:layout_marginStart="16dp"
                                android:includeFontPadding="false"
                                android:textColor="?attr/hintTextColor" />

                        </LinearLayout>

                        <View
                            android:id="@+id/settings_divider_bottom"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/divider_height"
                            android:background="?attr/dividerColor"
                            android:layout_marginStart="16dp"
                            android:layout_gravity="bottom"/>

                    </FrameLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="?attr/dividerColor"
                    android:layout_marginTop="24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="?attr/backgroundPrimaryColor" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textSize="16dp"
                        android:onClick="@{click::onDefaultClick}"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:textColor="?attr/primaryTextColor"
                        android:text="@string/settings_advanced_default"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/divider_height"
                        android:background="?attr/dividerColor"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:textSize="16dp"
                        android:onClick="@{click::onCacheClick}"
                        android:fontFamily="sans-serif"
                        android:includeFontPadding="false"
                        android:textColor="?attr/primaryTextColor"
                        android:text="@string/settings_advanced_clear" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/divider_height"
                    android:background="?attr/dividerColor"
                    android:layout_marginBottom="32dp" />

            </LinearLayout>
        </ScrollView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dropShadowHeight"
            android:layout_below="@+id/tb_advanced"
            android:background="?attr/dropShadowResource" />

    </RelativeLayout>
</layout>